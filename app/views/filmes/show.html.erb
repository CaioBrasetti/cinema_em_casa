<p style="color: green"><%= notice %></p>

<%= render @filme %>
<br>

<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome original:</th>
        <th>Resumo:</th>
        <th>Nota do filme:</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @movie[0]["original_title"] %></td>
        <td><%=  @movie[0]["overview"] %></td>
        <td><%=  @movie[0]["vote_average"] %></td>
      </tr>
    </tbody>
  </table>
</div>
<div>
<br>
  <button type="button floatLeft" class="btn btn-dark" style="float: left">
    <%= link_to "Editar esse filme", edit_filme_path(@filme) %> 
  </button>
  <button type="button floatLeft" class="btn btn-dark" style=" float: rigth; margin-left: 5px">
    <%= link_to "Voltar para a lista de filmes", filmes_path %>
  </button>
  <br><br>
  <%= button_to "Deletar Filme", @filme, method: :delete %>
</div>
