<p style="color: green"><%= notice %></p>
<div class="jumbotron text-center">
  <h1>Atuações</h1>
</div>
<div id="atuacaos">
  <div class="container">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nome do ator:</th>
          <th>Nome do filme:</th>
          <th>Nome do personagem:</th>
          <th>Informações</th>
        </tr>
      </thead>
      <tbody>
      
        <% @atuacaos.each do |atuacao| %>
          <tr>
            <td><%= atuacao.ator.nome %></td>
            <td><%= atuacao.filme.titulo %></td>
            <td><%= atuacao.nome_do_personagem %></td>
            <td> <%= link_to "Mostrar essa atuação", atuacao%> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div style="display: inline-block; margin-left: 600px">
  <br>
  <br>
  <button type="button" class="btn btn-dark" style="float: left">
    <%= link_to "Nova atuação", new_atuacao_path%> 
  </button>
  <button type="button floatLeft" class="btn btn-dark" style=" float: rigth; margin-left: 5px">
    <%= link_to "Voltar para a tela inicial", welcome_index_path%> 
  </button>
</div>