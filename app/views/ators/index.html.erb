<p style="color: green"><%= notice %></p>


<div class="jumbotron text-center">
  <h1>Atores</h1>
</div>
<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Data de nascimento</th>
        <th>Informações</th>
      </tr>
    </thead>
    <tbody>
      <% @ators.each do |ator| %>
        <tr>
          <td><%= ator.nome %></td>
          <td><%= ator.data_de_nascimento.strftime("%d/%m/%Y") %></td>
          <td> <%= link_to "Mostrar este ator", ator %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div style="display: inline-block; margin-left: 600px">
  <br>
  <br>
   <button type="button floatLeft" class="btn btn-dark" style="float: left">
    <%= link_to "Novo ator", new_ator_path%> 
  </button>
  <button type="button floatLeft" class="btn btn-dark" style=" float: rigth; margin-left: 5px">
    <%= link_to "Voltar para a tela inicial", welcome_index_path%> 
  </button>
</div>
